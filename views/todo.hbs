        <center>
        <header>MY TASKS</header>
        <div class="inputfield">
            <form action="/dashboard/todo/add" method="post">
                <input id="text" name="text" type="text" placeholder="ADD NEW TASK">
                <input class="calendar" id="date" name="date" type="date" placeholder="Enter deadline">
                <button id="submit" name="submit" type="submit" class="btn"><i class="fa fa-plus"></i></button>
            </form>
        </div>
        </center>

        <ul class="todolist">

            {{#each rows}}
            <li class="listing">{{task}}
                  <span>
                        <form action="/dashboard/todo/delete/{{this.task_id}}" method="post" class="inline">
                        <button type="submit" style="background: none;border: none;">
                              <i class="fa fa-trash"></i>
                        </button>
                        </form>
                  </span>
            </li>
            <div class="box">{{deadline}}</div>
            {{/each}}

        </ul>
        <div class="footer">
            <form action="/dashboard/todo/allclear" method="post">
